<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.js.Msb2And.MainActivity">

    <TextView
        android:id="@+id/label1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=" Connect remotely through "
        android:textAlignment="textEnd"
        android:gravity="end"
        app:layout_constraintBaseline_toBaselineOf="@id/buttonSouf"
        app:layout_constraintRight_toLeftOf="@id/buttonSouf"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSouf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/checkNamed"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Souffleur"
         />

    <TextView
        android:id="@+id/label2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Connect direct to MSB of "
        android:textAlignment="textEnd"
        android:gravity="end"
        app:layout_constraintBaseline_toBaselineOf="@id/buttonRx"
        app:layout_constraintRight_toLeftOf="@id/buttonRx"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonRx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Receiver"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSouf" />

    <TextView
        android:id="@+id/label4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Simulation from a Logger file "
        android:textAlignment="textEnd"
        android:gravity="end"
        app:layout_constraintBaseline_toBaselineOf="@id/buttonSim"
        app:layout_constraintRight_toLeftOf="@id/buttonSim"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Select"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRx" />

    <TextView
        android:id="@+id/label3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Do nothing "
        android:textAlignment="textEnd"
        android:gravity="end"
        app:layout_constraintBaseline_toBaselineOf="@id/buttonStop"
        app:layout_constraintRight_toLeftOf="@id/buttonStop"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Stop"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSim" />

    <CheckBox
        android:id="@+id/checkNamed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checked="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Use Addr.txt " />

</android.support.constraint.ConstraintLayout>
